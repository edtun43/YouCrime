<div class="container-card-info p-3 text-light r">
  <div class="card-info" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path("#{@crime.category}.jpg") %>')">  </div>

  <div class="d-flex">
    <div class="card-body m-3" >
      <h2> Succesful jobs: </h2>
      <h2><% @crime.progress.times do %>
        <%= "*" %>
      <% end %></h2>
      <h2>Criminal: <%= @crime.user.username %></h2>
      <h3 class="card-title text-light py-2">Crime category: <%= @crime.category %></h3>
      <p class="card-text">Bio: <br><%= @crime.bio %></p>
      <p class="card-text">Description: <br><%= @crime.description %></p>
    </div>

    <div class="booking-box p-3 my-5">
      <p class="card-text text-light m-3"><%= number_to_currency(@crime.price, unit: "$") %></p>
      <button class="btn btn-primary">Book now</button>
    </div>
  </div>

  <%= simple_form_for [@crime_new, @booking] do |f| %>
    <%= f.input :date %>
    <%= f.submit 'Book now' %>
  <% end %>
</div>
