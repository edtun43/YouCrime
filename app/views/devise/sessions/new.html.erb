<div class="container py-5">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="crime-form" class="form-inputs">
    <h2>Log in into your Account</h2>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <div class="form-buttons">
      <div>
        <%= f.submit "Login", class: 'btn btn-white crime-button' %>
      </div>
        <div>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-white' %><br />
          <% end %>
        </div>
        <div>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-white' %><br />
          <% end %>
        </div>
    </div>
  </div>
  <% end %>
</div>
